@model IEnumerable<SchneiderDashboard.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<a class="btn btn-primary" asp-controller="Employee" asp-action="Create">Add New Employee</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>SESA ID</th>
            <th>Name</th>
            <th>Birth Date</th>
            <th>Gender</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.SesaId</td>
                <td>@emp.Name</td>
                <td>@emp.Birthdate?.ToShortDateString()</td>
                <td>@emp.GenderCodeNavigation?.GenderDesc</td>
                <td>@emp.DepartmentCodeNavigation?.DepartmentDesc</td>
            </tr>
        }
    </tbody>
</table>
