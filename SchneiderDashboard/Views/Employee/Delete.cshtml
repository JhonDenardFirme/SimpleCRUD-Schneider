@model SchneiderDashboard.Models.Employee

<h2>Delete Employee</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this employee?
</div>

<dl class="row">
    <dt class="col-sm-2">SESA ID</dt>
    <dd class="col-sm-10">@Model.SesaId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Birthdate</dt>
    <dd class="col-sm-10">@Model.Birthdate?.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SesaId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
